<center></center><h2>
  <%= @tasklist.id %>
  番目 のタスク詳細ページ</h2></center>

<table class="table table-bordered">
  <tr>
    <th>番号</th>
    <td>
      <%= @tasklist.id %>
    </td>
  </tr>
  
  <tr>
    <th>ステータス</th>
    <td>
      <%= @tasklist.status %>
    </td>
  </tr>
  
  <tr>
    <th>タスク</th>
    <td>
      <%= @tasklist.content %>
    </td>
  </tr>
</table>

<%= link_to 'このタスクを編集する', edit_task_path(@tasklist), class: 'btn btn-default' %>

<%= link_to 'このタスクを削除する', @tasklist, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-danger' %>
